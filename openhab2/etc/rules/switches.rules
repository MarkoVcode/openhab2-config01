
rule "React on Switch-1 (T1_Switch_B1) change/update"
when
    Item T1_Switch_B1 changed from OFF
then
    T1_Switch_B3.sendCommand(ON)
    T_ExternalLight_A.sendCommand(100)
end

rule "React on Switch-1 (T1_Switch_B1) change/update"
when
    Item T1_Switch_B1 changed from ON
then
    T1_Switch_B3.sendCommand(OFF)
    T_ExternalLight_A.sendCommand(0)
end
